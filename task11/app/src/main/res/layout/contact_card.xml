<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    android:layout_margin="8dp"
    tools:targetApi="lollipop">
    <LinearLayout
       android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            style="@style/layoutLinearStyle">
            <TextView
                android:text="@string/contact_name"
                style="@style/subheadings" />
            <TextView
                android:id="@+id/cardDetailsName"
                style="@style/details" />
        </LinearLayout>
        <LinearLayout
            style="@style/layoutLinearStyle">
            <TextView
                android:text="@string/mail_id"
                style="@style/subheadings" />
            <TextView

                android:id="@+id/cardDetailsMailId"
                style="@style/details" />

        </LinearLayout>
        <LinearLayout
            style="@style/layoutLinearStyle">
            <TextView
                android:text="@string/contact_phone"
                style="@style/subheadings" />
            <TextView
                android:id="@+id/cardDetailsPhoneNumber"
                style="@style/details" />

        </LinearLayout>
        <LinearLayout
            style="@style/layoutLinearStyle">
            <TextView
                android:text="@string/gender"
                style="@style/subheadings" />
            <TextView
                android:id="@+id/cardDetailsGender"
                style="@style/details" />
        </LinearLayout>
        <LinearLayout
            style="@style/layoutLinearStyle">
            <TextView
                android:text="@string/department"
                style="@style/subheadings" />
            <TextView
                android:id="@+id/cardDetailsDepartment"
                style="@style/details" />
        </LinearLayout>
        <LinearLayout
            style="@style/layoutLinearStyle">
            <TextView
                android:text="@string/languages"
                style="@style/subheadings" />
            <TextView
                android:id="@+id/cardDetailsLanguages"
                style="@style/details" />

        </LinearLayout>
        <LinearLayout
            style="@style/layoutLinearStyle">
            <TextView
                android:text="@string/address"
                style="@style/subheadings" />
            <TextView
                android:id="@+id/cardDetailsAddress"
                style="@style/details" />

        </LinearLayout>
        <LinearLayout
            android:gravity="right"
            android:layout_marginBottom="8dp"
            style="@style/layoutLinearStyle">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/cardDetailsUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/update"
                style="@style/Widget.MaterialComponents.Button"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/cardDetailsDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/delete"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                />
        </LinearLayout>


    </LinearLayout>




</androidx.cardview.widget.CardView>