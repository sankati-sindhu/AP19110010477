<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/colorPrimary"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:layout_marginTop="30dp"
                android:text="Team A"
                android:gravity="center|bottom"
                android:textSize="28sp"
                android:textColor="@color/colorPrimaryDark"
                tools:ignore="NestedWeights" />
            <TextView
                android:id="@+id/aScore"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:text="@string/_0"
                android:gravity="center|top"
                android:textSize="40sp"
                android:textColor="@color/black"
                tools:ignore="NestedWeights" />
            <Button
                android:id="@+id/aPoint1"
                android:layout_margin="24dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1667"
                android:background="@color/colorPrimaryDark"
                android:text="@string/_1"
                android:textColor="@color/white"
                android:textSize="15sp" />
            <Button
                android:id="@+id/aPoint2"
                android:layout_margin="24dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1666"
                android:background="@color/colorPrimaryDark"
                android:text="@string/_2"
                android:textColor="@color/white"
                android:textSize="15sp"/>
            <Button
                android:id="@+id/aPoint3"
                android:layout_margin="24dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.166"
                android:background="@color/colorPrimaryDark"
                android:text="@string/_3"
                android:textColor="@color/white"
                android:textSize="15sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/colorPrimary2"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:layout_marginTop="30dp"
                android:text="Team B"
                android:gravity="center|bottom"
                android:textSize="28sp"
                android:textColor="@color/colorPrimaryDark2"
                tools:ignore="NestedWeights" />
            <TextView
                android:id="@+id/bScore"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:text="@string/_0"
                android:gravity="center|top"
                android:textSize="40sp"
                android:textColor="@color/black"
                tools:ignore="NestedWeights" />
            <Button
                android:id="@+id/bPoint1"
                android:layout_margin="24dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1667"
                android:background="@color/colorPrimaryDark2"
                android:text="@string/_1"
                android:textColor="@color/white"
                android:textSize="15sp" />
            <Button
                android:id="@+id/bPoint2"
                android:layout_margin="24dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1666"
                android:background="@color/colorPrimaryDark2"
                android:text="@string/_2"
                android:textColor="@color/white"
                android:textSize="15sp"/>
            <Button
                android:id="@+id/bPoint3"
                android:layout_margin="24dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.166"
                android:background="@color/colorPrimaryDark2"
                android:text="@string/_3"
                android:textColor="@color/white"
                android:textSize="15sp"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2">
        <Button
            android:id="@+id/reset"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="120dp"
            android:layout_marginVertical="35dp"
            android:background="@color/backgroundDark"
            android:text="@string/reset"
            android:textSize="20sp"/>

    </LinearLayout>



</androidx.appcompat.widget.LinearLayoutCompat>